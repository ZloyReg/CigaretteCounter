<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smokingdepp">

    <TextView
        android:id="@+id/NormPerDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Задайте дневную норму сигарет:"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@android:color/holo_orange_dark"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.03"/>

    <Button
        android:id="@+id/SmokeButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:text="Курнуть!"
        android:textColor="@color/colorButtonText"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />

    <Button
    android:id="@+id/ResetButton"
    style="@style/Widget.AppCompat.Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorButton"
    android:text="Сброс счетчиков"
    android:textColor="@color/colorButtonText"
    android:textSize="16sp"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.86" />

    <Button
        android:id="@+id/AboutButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:text="About"
        android:textColor="@color/colorButtonText"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintVertical_bias="0.99" />

    <Chronometer
        android:id="@+id/LastSmokeTimeChro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textColor="@color/colorAvailableNorm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <TextView
        android:id="@+id/SmokedForTodayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:text="@string/smokedTodayText"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@android:color/holo_orange_dark"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.22" />

    <TextView
        android:id="@+id/SmokedForTodayValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:text="0"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textColor="@color/colorAvailableNorm"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.27" />

    <TextView
        android:id="@+id/AvailableForTodayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/availableTodayText"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@android:color/holo_orange_dark"
        android:visibility="visible"
        android:background="@color/colorButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.33"/>

    <TextView
        android:id="@+id/AvailableForTodayValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorButton"
        android:text="0"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textColor="@color/colorAvailableNorm"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/LastSmokeTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Прошло с последнего перекура:"
        android:textAppearance="@android:style/TextAppearance"
        android:textColor="@android:color/holo_orange_dark"
        android:background="@color/colorButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.44"/>

    <LinearLayout
        android:id="@+id/secondtier"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11">

        <RelativeLayout
            android:id="@+id/secondRelat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/MinusB"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:text="-"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:textColor="@color/colorAvailableNorm"
                android:textSize="36sp"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/NormPerDayValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/PlusB"
                android:layout_alignBottom="@+id/PlusB"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/MinusB"
                android:background="@color/colorButton"
                android:text="0"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:textColor="@color/colorButtonText"
                android:textSize="30sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/PlusB"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/MinusB"
                android:layout_toEndOf="@+id/NormPerDayValue"
                android:background="@android:color/transparent"
                android:text="+"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:textColor="@color/colorAvailableBad"
                android:textSize="36sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/FreezeButton"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/MinusB"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/PlusB"
                android:background="@color/colorButton"
                android:text="Зафиксировать"
                android:textColor="@color/colorButtonText"
                android:textSize="16sp" />

            <Button
                android:id="@+id/UnFreezeButton"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/MinusB"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/PlusB"
                android:background="@color/colorButton"
                android:textColor="@color/colorButtonText"
                android:text="Изменить"
                android:textSize="16sp"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>